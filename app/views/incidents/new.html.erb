<% content_for :title, title('Create an incident', 'Incidents')%>

<% content_for :breadcrumbs, 
	breadcrumbs(['Incidents',incidents_path]) %>
<% content_for :subheader_title, 'New Incident' %>

<% content_for :body do %>	
	<%= error_messages_for :incident %>
	<% form_for @incident do |f| -%>
		<p>
			<%= f.label :name %><br/>
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :description, 'Quick Overview' %><br/>
			<%= f.text_area :description, :size => '40x5' %>
		</p>
		<p>
			<%= f.submit 'Create' %>
		</p>
	<% end %>
<% end %>
